{
    "name": "snootbeest\tantrum",
    "description": "RESTful API framework based on Slim 3",
    "type" : "library",
    "keywords": ["REST, API, Slim 3, bootstrap, php, service locator, dependency injection"],
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Tom Croft",
            "email": "snootbeest@gmail.com",
            "role": "developer"
        }
    ],
    "autoload": {
        "psr-4" : {
            "SnootBeest\\Tantrum\\" : "src/Tantrum"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SnootBeest\\Tantrum\\Test\\": "test/"
        }
    },
    "require": {
        "slim/slim": "^3.8",
        "hassankhan/config": "^0.10.0",
        "monolog/monolog": "^1.23"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "mockery/mockery": "^1.0"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit ./test"
        ]
    }
}
